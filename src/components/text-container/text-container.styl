.g--text-title, .g--text-keywords, .g--text-keyword
  display flex
  justify-content flex-start
  align-items flex-start
.row-wrapper
  display flex

.g--text-title, .g--text-keyword
  flex-direction column

.g--text-title
  {font-medium}
  white-space nowrap
  /**
   * 实际 line-height 为 64px，
   * 但是一二行之间又有 -8px 的 margin，
   * 所以每行的行高减少 4px
   * 通过 padding 补上上方和下方少掉的空隙
   * 移动端为一半 2px
   */
  size-height-spacing(42, 60, -.2)
  padding 4px 0

  @media $portrait
    size-height-spacing(28, 44, -.1)
    padding 2px 0

  // span:nth-child(2)
  //   opacity 0.6
  //   white-space normal

  sup
    font-size 40%
    top -1.2em

.g--text-detail
  {font-regular}
  size-height-spacing(16, 28, -.1)
  width 100%
  max-width 752rpx

  &.bold
    {font-bold}

  &.with-margin
    margin-top 20px

.g--text-keywords
  flex-direction row
  flex-wrap wrap
  width 100%

  &.with-margin .g--text-keyword
    margin-top 32px

  .value
    color $blue
    size-height-spacing(52, 52)
    $padding-em = round(((80 - 52) / 2 / 52), 4) em
    padding $padding-em 0

    @media $portrait
      size-height-spacing(36, 36, -.18)
      $padding-em = round(((56 - 36) / 2 / 36), 4) em
      padding $padding-em 0

    sub
      {font-bold}
      bottom 0
      size-height-spacing(20, 20, -.12)

      @media $portrait
        size-height-spacing(16, 16, -.1)

  .key
    size-height-spacing(14, 24, -.06)
    color alpha($black, .6)
    margin-top -4px

    @media $portrait
      size-height-spacing(12, 24, -.05)

.g--text-keyword
  margin-right 67rpx

  @media $portrait
    margin-right 0
    flex 0 0 50%

.g--text-container
  color $white
  display flex
  flex-direction column
  justify-content flex-start
  align-items flex-start

  &.black
    color $black

.pic-container, .img-container
  position relative
  overflow hidden
  transition transform .4s ease-out

  @media $portrait
    transition none

  img
    position absolute
    width 100%
    height 100%
    transition transform .5s ease-out

    @media $portrait
      transition none

  .tag
    position absolute
    left calc(50% - 40px)
    bottom 32rpx
    width 80px
    height 28px
    background-color alpha($white, .6)
    font-size 13px
    color #000000
    display flex
    align-items center
    justify-content center

// hima国内
.g--text-container.ta--group-hima
  +match-pc()
    flex-direction row
    align-items flex-end
  +match-mo()
    flex-direction column
  .content-wrapper
    display flex
    flex-direction column
    +match-pc()
      .g--text-detail
        margin-right 128rpx
  .g--text-keywords-hima
    display flex
    +match-mo()
      margin-top 48px
    .g--text-keyword-hima
      &:not(:last-child)
        margin-right 50px
      .title
        {font-regular}
        g--font(36, 48, 0)
        color #fff
        +match-pc()
          g--font(52, 64, 0)
      .unit
        {font-bold}
        g--font(16, 36, -.1)
        color #fff
        +match-pc()
          margin-left 4px
          {font-regular}
          g--font(16, 32, 0)
      .attr
        {font-regular}
        g--font(14, 24, -.06)
        color #fff
        +match-pc()
          margin-top 11px
          g--font(16, 18, -.07)

