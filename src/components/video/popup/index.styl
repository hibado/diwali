.g--popup
  .g--popup-container
    display flex
    align-items center
    justify-content center
    position relative
    width 100%
    // height 100%

    @media $portrait
      padding 0

  .g--video-wrapper
    position relative
    margin-top -12px
    width 75%
    height auto

    +match-2560()
      margin-top -24px

    +match-mo()
      width 100vw

    /.video-portrait&
      width 100%
      height 100%
      padding 32px 0
      margin-top 0

    video
      width 100%
      height 100%
      outline none

      /.video-portrait&
        object-fit contain

    video[src='']
      display none

  .g--popup-close
    top -32px
    right 0
    width 12px
    height 12px
    position absolute
    margin-left auto
    cursor pointer
    z-index 2

    @media $portrait
      right 16mpx
      width 24px
      height 24px

    /.video-portrait&
      top 8px

    .inner
      width 100%
      height 100%

      @media $portrait
        transform scale(.5)

+prefix-classes('g--popup-')
  .container
    background black

    .close
      polygon
        fill white

    &[data-theme = 'white']
      background white

      .close
        polygon
          fill black
