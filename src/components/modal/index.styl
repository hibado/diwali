
.zn--modal
  position fixed
  z-index 999
  top 0
  left 0
  width 100%
  height 100vh
  display flex
  align-items center
  justify-content center
  visibility hidden
  transform translateY(100vh)
  transition transform .4s ease-out, visibility .4s
  --bg-blur none
  --bg-dark alpha(#000, 1)
  --bg-light alpha(#fff, 1)

  +prefix-classes('zn--modal-')
    &.show
      visibility visible
      transform translateY(0)
      transition transform .4s ease-out, height .2s ease

    .bg
      position absolute
      z-index 1
      top 0
      left 0
      width 100%
      height 100vh
      backdrop-filter var(--bg-blur)

    .content
      position relative
      z-index 2

:not(.zn--modal) > .zn--modal-content
  display none
