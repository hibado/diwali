html
  head
    meta(charset="UTF-8")
    style(type='text/css').
      @font-face {
        font-family: 'OPPOFont-Bold';
        src: url('./fonts/OPPOSans-S-B.eot');
        src: url('./fonts/OPPOSans-S-B.woff') format('woff'),
          url('./fonts/OPPOSans-S-B.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
      }

      @font-face {
        font-family: 'OPPOFont-Medium';
        src: url('./fonts/OPPOSans-S-M.eot');
        src: url('./fonts/OPPOSans-S-M.woff') format('woff'),
          url('./fonts/OPPOSans-S-M.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
      }

      @font-face {
        font-family: 'OPPOFont-Regular';
        src: url('./fonts/OPPOSans-S-R.eot');
        src: url('./fonts/OPPOSans-S-R.woff') format('woff'),
          url('./fonts/OPPOSans-S-R.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
      }

      @font-face {
        font-family: 'OPPOFont-Light';
        src: url('./fonts/OPPOSans-J-L.eot');
        src: url('./fonts/OPPOSans-J-L.woff') format('woff'),
          url('./fonts/OPPOSans-J-L.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
      }

      #font-b * {
        font-family: OPPOFont-Bold;
      }
      #font-m * {
        font-family: OPPOFont-Medium;
      }
      #font-r * {
        font-family: OPPOFont-Regular;
      }
      #font-l * {
        font-family: OPPOFont-Light;
      }

  body
    block body
